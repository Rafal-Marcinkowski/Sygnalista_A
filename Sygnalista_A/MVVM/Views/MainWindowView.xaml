<Window
    x:Class="Sygnalista_A.MVVM.Views.MainWindowView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cefSharp="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Sygnalista_A"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title=""
    Width="900"
    Height="550"
    WindowStyle="None"
    mc:Ignorable="d">

    <Border BorderBrush="Black" BorderThickness="1">

        <Grid Style="{StaticResource BackgroundStyle}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="16*" />
                <ColumnDefinition Width="1.5*" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Margin="40,4,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Panel.ZIndex="100"
                FontSize="9"
                FontWeight="Normal"
                Text="{Binding UIManager.DanePobrano}" />

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <DockPanel Grid.Row="0">

                    <Button
                        Width="20"
                        Height="20"
                        VerticalAlignment="Top"
                        BorderBrush="Black"
                        Click="ChromeGoBack"
                        Content="←"
                        FontSize="8"
                        FontWeight="Bold" />

                    <Button
                        Width="10"
                        Height="10"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        BorderBrush="Black"
                        Click="Shutdown"
                        Content=""
                        FontSize="8"
                        FontWeight="DemiBold" />

                </DockPanel>

                <Button
                    Grid.Row="1"
                    Grid.RowSpan="2"
                    Width="10"
                    Height="10"
                    Margin="0,0,0,26"
                    VerticalAlignment="Bottom"
                    BorderBrush="Black"
                    Command="{Binding ForceAutoScriptCommand}"
                    Content="A"
                    FontSize="5"
                    FontWeight="Bold"
                    Style="{StaticResource forceAutoScriptButtonStyle}" />

                <Button
                    x:Name="startButton"
                    Grid.Row="2"
                    Width="auto"
                    VerticalAlignment="Bottom"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Command="{Binding ExecuteSygnalista_A}"
                    Content=""
                    FontSize="14"
                    FontWeight="Bold" />

            </Grid>

            <Border
                Grid.Row="0"
                BorderBrush="Black"
                BorderThickness="1">
                <cefSharp:ChromiumWebBrowser
                    x:Name="chrome"
                    Grid.Row="1"
                    Address="https://--------------" />
            </Border>
        </Grid>
    </Border>
</Window>
